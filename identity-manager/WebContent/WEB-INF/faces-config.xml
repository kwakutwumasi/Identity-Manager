<?xml version="1.0" encoding="UTF-8"?>

<faces-config
    xmlns="http://java.sun.com/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_1.xsd"
    version="2.1">
	<application>
		<navigation-handler>org.jboss.gravel.navigation.GravelNavigationHandler</navigation-handler>
		<view-handler>com.quakearts.webapp.facelets.viewhandler.QueryPreservingViewHandler</view-handler>
		<system-event-listener>
			<system-event-listener-class>com.quakearts.identity.system.AdministratorCreateEvent</system-event-listener-class>
			<system-event-class>javax.faces.event.PostConstructApplicationEvent</system-event-class>
		</system-event-listener>
	</application>
</faces-config>
